  <% @subtransactions.each do |subtransaction| %>
  <tr>
    <td style="width:300px;">
      <p>
        <strong><%= subtransaction.answer.question.question %>ajdnkajsndkasndkjasndkjasndkjasndkjasndkjasndkjnaskjdnaksjdnksakanskd</strong>
      </p>
    </td>
