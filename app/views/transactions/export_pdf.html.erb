<h1>Report Screening</h1>
<h4><strong>Score :</strong> <%= @transaction.score %></h4>
<h5>Screening By: <%= @transaction.useralias.name %></h4>
<hr>

<table style="width:70%;margin-right:auto;">
  <tr>
    <th style="width:auto;"></th>
    <th style="width:auto;"></th>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Name:</strong>
        <%= @transaction.name %>
      </p>
    </td>
    <td>
      <p>
        <strong>Age:</strong>
        <%= @transaction.age %>
      </p>
    </td>
    <td>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Gender:</strong>
        <%= @transaction.gender %>
      </p>
    </td>
    <td>
      <p>
        <strong>Checkin date:</strong>
        <%= @transaction.created_at.strftime("%d/%b/%Y %H:%M:%S") %>
      </p>
    </td>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Room:</strong>
        <%= @transaction.ruangan %>
      </p>
    </td>
    <td>
      <p>
        <strong>Doctor:</strong>
        <%= @transaction.doctor %>
      </p>
    </td>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Medic record number:</strong>
        <%= @transaction.medic_record_number %>
      </p>
    </td>
    <td>
      <p>
        <strong>Bed number:</strong>
        <%= @transaction.bed_number %>
      </p>
    </td>
  </tr>
</table>

<hr>
<h2>Question & Answer</h2>
<table style="width:70%;margin-right:auto;">
  <% @subtransactions.each do |subtransaction| %>
  <tr>
    <td style="width:300px;">
        <p style="margin-bottom:15px;"><strong><%= subtransaction.answer.question.question %></strong></p>
        <li><%= subtransaction.answer.answer %> (<%= subtransaction.answer.value %>)</li>
    </td>
  </tr>
  <% end %>
  
</table>

<hr>
<table style="width:70%;;margin-right:auto;">
  <tr>
    <td style="text-align:left;">
        <h2>
        <%= @decision.title %> <small>(<%= @decision.begin_value %> - <%= @decision.end_value %>)</small>
        </h2>    
        <p>
          <%= @decision.decision.html_safe %>
        </p>
    </td>
  </tr>
  
</table>


</br>

