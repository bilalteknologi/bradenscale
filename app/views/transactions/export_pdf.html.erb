        <%= @decision.title %> <small>(<%= @decision.begin_value %> - <%= @decision.end_value %>)</small>
        </h2>    
    </td>
  </tr>
  <tr>
    <td style="text-align:left;">
      <p>
        <%= @decision.decision.html_safe %>
