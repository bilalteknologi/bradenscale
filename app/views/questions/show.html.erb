<%= render "layouts/nav" %>
<p id="notice"><%= notice %></p>

<div class="column is-12 ">
  <div class="box cta">
    <div class="columns is-mobile is-centered">
        <div class="field is-grouped is-grouped-multiline">
          <div class="control">
          <a href="#" class="button is-rounded is-primary">
            <%= @question.question %>
          </a>
          </div>
        </div>
    </div>

    <%= form_for @answer, :url => question_answers_path(@question), :method => :post do |form| %>
      <% if @answer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

          <ul>
          <% @answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <div class="card-footer">
      <div class="column is-12">
        <div class="field">
          <div class="control">
            <%= form.text_field :answer, class: "input", placeholder: "Answer" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= form.number_field :value, class: "input", placeholder: "Value" %>
          </div>
        </div>

        <%= form.submit :class => "button is-link is-fullwidth"%>
      </div>
    </div>

    <% end %>

    <div class="card-footer">
      <div class="column is-12">
      <table class="table is-fullwidth">
        <thead>
          <tr>
            <th><abbr title="Answer">Answer</abbr></th>
            <th><abbr title="Value">Val</abbr></th>
            <th><abbr title="Action">Action</abbr></th>
          </tr>
        </thead>
        <tbody>
          <% @answers.each do |answer| %>
          <tr>
            <td><%= answer.answer %></td>
            <td><%= answer.value %></td>
            <td>
              <%= link_to edit_question_answer_path(@question,answer) ,class: "button is-link" do%>
                <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to question_answer_path(@question,answer), method: :delete, data: { confirm: 'Are you sure?' } ,class: "button is-danger" do%>
                <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      <table>
      </div>
    </div>

    <footer class="card-footer">
        <div class="card-footer-item">
          <div class="columns">
            <div class="column is-12">
              <div class="buttons is-center">                
                <%= link_to edit_question_path(@question), class: "button is-link" do%>
                  Edit Question
                <% end %>
                
                <%= link_to questions_path ,class: "button is-danger" do%>
                  Back
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </footer>
  </div>
</div>

