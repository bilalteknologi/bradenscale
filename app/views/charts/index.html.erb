    end_at = $(e.target).val(); 
    start_at = $("#start_month_at").val();     

      $.ajax({
        type: "GET",
        url: "/charts/decisions_chart_by_month",
        data: {
          start_at: start_at,
          end_at: end_at,
        },
        success: function (data) {
          //reload akan datanya
          //$("#chart-2").html(data);
        },
      });    
});

