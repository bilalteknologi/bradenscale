<h1>Charts#decisions_chart</h1>
<input type="text" id="start_day_at"></input>
<input type="text" id="end_day_at"></input>
<%= area_chart charts_decisions_chart_by_day_path %>
<input type="text" id="start_month_at"></input>
<input type="text" id="end_month_at"></input>
<%= area_chart charts_decisions_chart_by_month_path %>

<script type="text/javascript">
